<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.at.remind.main.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ico_sound"
            android:onClick="selectNotification"/>
        <SeekBar
            android:id="@+id/volume_view"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="20dp"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Switch
            android:id="@+id/switch_lock_screen_notification"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:text="仅在锁屏的情况下通知"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <Switch
                android:id="@+id/switch_not_current_app_notification"
                android:layout_margin="10dp"
                android:paddingTop="5dp"
                android:text="不在当前应用时通知"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/open_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:onClick="openPermission"
                android:text="开启权限"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@+id/linearLayout"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加关键字："
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/add_notification_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请打开必要服务"
                android:padding="2dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:onClick="openService"
                />
        </FrameLayout>
        <GridView
            android:id="@+id/grid_view"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:numColumns="2"
            />

    </LinearLayout>




</LinearLayout>
